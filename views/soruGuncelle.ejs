<% include navbar %>
<!doctype html>
<html>
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Soru Güncelle</title>
    
  </head>
  <body>

		<form style="padding:10%;" action="/soru/<%= soru._id %>?_method=PUT" method="POST">
				<div class="form-group">
				  <label for="exampleFormControlInput1"></label>
				  <input type="text" required="true" name="soru[baslik]" class="form-control" id="exampleFormControlInput1" value="<%= soru.baslik %>">
				</div>

				<div class="form-group">
				  <label for="exampleFormControlTextarea1"></label>
				  <textarea class="form-control" required="true" name="soru[icerik]" id="exampleFormControlTextarea1" rows="3" ><%= soru.icerik %></textarea>
				</div>

				<div class="form-group">
						<label for="inputState">Etiket</label>
								<select id="inputState" name="soru[etiket]" class="form-control">
								<option selected><%= soru.etiket %></option>
								<option>Genel</option>></option>
								<option>Yazılım</option>></option>
								<option>Donanım</option>></option>
								<option>Kültür</option>></option>
								<option>Sanat</option>></option>
								<option>Eğlence</option>></option>
								<option>Bilim</option>></option>
								<option>İnternet</option>></option>
								<option>Oyun</option>></option>
								<option>Sağlık</option>></option>
								<option>Alışveriş</option>></option>
								<option>Kariyer</option>></option>
								<option>Sinema</option>></option>
								<option>Müzik</option>></option>
								<option>Kitap</option>></option>
								<option>Eğitim</option>></option>
								<option>Spor</option>></option>
							</select>
						</div>

						<button type="submit" class="btn btn-info">Düzenlediğin Soruyu Yayınla</button>
			
			  </form>

  </body>
</html>
<% include footer %>